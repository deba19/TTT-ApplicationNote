<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
   
    <title>Welcome to application note</title>
    <style>
      body{
        color:whitesmoke;
        font-family: sans-serif;
        background: linear-gradient(rgba(0,0,0,0.80),rgba(0,0,0,0.40)),url("./img/back.jpg");
        background-size: cover;
        background-attachment: fixed;

      }
    </style>
  </head>
  <body>
   <div class="headers container py-5 bg-transparent text-light text-center">
     <h2>Welcome to Frequency Checker Website</h2>
   </div>
    <div class="container py-5 bg-transparent">
        <form action="" method="POST">
            <div class="form-group row">
                <div class="col-12 my-2 col-md-4 offset-md-3">
                    <input class="form-control" name="newnum" type="number" placeholder="Enter a number">
                </div>
                 <div class="col-4 my-2 col-md-2">
                    <button type="submit" class="form-control btn btn-success" onclick="clearSc()">Submit</button>
                 </div>
                 <div class="col-md-6"></div>
            </div>
          </form>
    </div>
    <div class="inputnum container text-white py-5 bg-transparent">
        <div class="row align-content-center">
            <h5 class="col-6 col-md-4 text-center offset-md-3 text-capitalize text-center">Your Entered Number is : </h5>
             <div class="col-6 text-center col-md-3 offset-0">{{newnum}}</div>
        </div>
    </div>
    <div id="out" class="container">
    <table class="table table-dark">
      <thead>
        <tr>
          <th>Word</th>
          <th>Frequency</th>
        </tr>
      </thead>
      <tbody>
      {{#each finalArray as |fa|}}
        <tr>
          <td>{{fa.name}}</td>
          <td>{{fa.total}}</td>
        </tr>
      {{/each}}
     </tbody>
    </table>
    </div>

    

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
  </body>
</html>